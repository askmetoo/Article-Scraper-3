<div class="container">

  <h1 class="center">NPR Articles</h1>

  <div class="row">

    {{#each articles}}
    <div class="col s12 m6 article">
      <div class="card blue-grey darken-4">
        <div class="card-content white-text">
          <span class="card-title">{{this.title}}</span>
          <p>{{this.summary}}</p>
        </div>
        <div class="card-action">
          <a href="{{this.link}}" target="_blank">Go to article</a>
          <a href="#">Notes</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>

</div>